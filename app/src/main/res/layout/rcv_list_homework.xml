    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <!--android:background="@drawable/background"-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="307dp"
            android:layout_height="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/homework_rci_top_shape" />

        <TextView
            android:id="@+id/homework_module"
            android:layout_width="220dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppins"
            android:text="Module"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.007" />

        <TextView
            android:id="@+id/homework"
            android:layout_width="196dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/poppins"
            android:text="homework"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/homework_module"
            app:layout_constraintTop_toBottomOf="@+id/homework_module"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="6dp"
            android:fillColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/timershape"
            app:layout_constraintStart_toEndOf="@+id/homework_module"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307"
            app:srcCompat="@drawable/ic_more_horiz_24px" />

        <ImageView
            android:id="@+id/timershape"
            android:layout_width="53dp"
            android:layout_height="23dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/homework"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/homework_timer_rcv_shape" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:fontFamily="@font/poppins"
            android:text="timer"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/timershape"
            app:layout_constraintEnd_toEndOf="@+id/timershape"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/timershape"
            app:layout_constraintTop_toTopOf="@+id/timershape"
            app:layout_constraintVertical_bias="0.363" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="12dp"
            android:layout_height="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/timershape"
            app:layout_constraintEnd_toStartOf="@+id/timer"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="@+id/timershape"
            app:layout_constraintTop_toTopOf="@+id/timershape"
            app:srcCompat="@drawable/ic_timer_24px" />


